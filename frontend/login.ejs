<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Eventify</title>
    <link href="img/website.jpeg" rel="icon">

    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500&family=Jost:wght@500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="css/style.css" rel="stylesheet">

    <!-- Add custom styling for error message -->
    <style>
        .alert-container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 15px;
        }
        .alert {
            width: 80%;
            max-width: 500px;
        }
    </style>
</head>
<body>
 

<%if(success && success.length){%>
    <div
      class="alert alert-success alert-dismissible fade show col-7 offset-4 mt-1"
      role="alert"
    >
      <%=success%>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
    <%} %> <%if(error && error.length){%>
    <div
      class="alert alert-danger alert-dismissible fade show col-6 offset-4 mt-1"
      role="alert"
    >
      <%=error%>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
    <%} %>
    

    <div class="container-xxl bg-white p-0">
        <!-- Navbar & Hero Start -->
        <div class="container-xxl position-relative p-0" id="home">
            <nav class="navbar navbar-expand-lg navbar-light px-4 px-lg-5 py-3 py-lg-0">
                <a href="" class="navbar-brand p-0">
                    <h1 class="m-0">Eventify</h1>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav mx-auto py-0">
                        <a href="https://eventify-1-ixhs.onrender.com/dashboard" class="nav-item nav-link active">Home</a>
                        <a href="https://eventify-1-ixhs.onrender.com/dashboard" class="nav-item nav-link">About Us</a>
                        <a href="https://eventify-1-ixhs.onrender.com/dashboard" class="nav-item nav-link">Contact</a>
                        <a href="https:/eventify-1-ixhs.onrender.com/users/login" class="nav-item nav-link">Login</a>
                        <a href="https://eventify-1-ixhs.onrender.com/users/register" class="nav-item nav-link">SignUp</a>
                    </div>
                </div>
            </nav>

            <!-- Login Section Start -->
            <div class="container-xxl bg-primary hero-header min-vh-100 d-flex align-items-center justify-content-center">
                <div class="container px-lg-5">
                    <div class="row g-5">
                        <div class="col-lg-6 mx-auto">
                            <div class="bg-white rounded p-5 shadow-lg wow fadeIn" data-wow-delay="0.3s">
                                <h3 class="text-center mb-4">Login as Student</h3>
                                <form action="https://eventify-1-ixhs.onrender.com/users/login" method="POST">
                                    <div class="form-group mb-3">
                                        <label for="username">Username</label>
                                        <input type="text" class="form-control" id="username" name="username" placeholder="Enter Username" required>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="email">Email address</label>
                                        <input type="email" class="form-control" id="email" placeholder="Enter email" required>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="password">Password</label>
                                        <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                                    </div>
                                    <div class="form-group form-check mb-3">
                                        <input type="checkbox" class="form-check-input" id="rememberMe">
                                        <label class="form-check-label" for="rememberMe">Remember me</label>
                                    </div>
                                    <button type="submit" class="btn btn-primary-gradient w-100 py-2 rounded-pill text-center">Login</button>
                                </form>
                                <div class="text-center mt-4">
                                    <p>Don't have an account? <a href="https://eventify-1-ixhs.onrender.com/users/register" class="text-primary-gradient">Sign Up</a></p>
                                    <p> <a href="https://eventify-1-ixhs.onrender.com/users/adminsignup" class="text-primary-gradient">Login as Admin</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Login Section End -->
        </div>

        <!-- Footer Start -->
        <div class="container-fluid bg-primary text-light footer wow fadeIn" data-wow-delay="0.1s">
            <div class="container py-5 px-lg-5">
                <div class="row g-5">
                    <div class="col-md-6 col-lg-3">
                        <h4 class="text-white mb-4">Address</h4>
                        <p><i class="fa fa-map-marker-alt me-3"></i>123 Street, New York, USA</p>
                        <p><i class="fa fa-phone-alt me-3"></i>+012 345 67890</p>
                        <p><i class="fa fa-envelope me-3"></i>info@example.com</p>
                        <div class="d-flex pt-2">
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-twitter"></i></a>
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-instagram"></i></a>
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                    <!-- Other footer content... -->
                </div>
            </div>
        </div>
        <!-- Footer End -->

        <!-- JavaScript Libraries -->
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>

        <!-- Template Javascript -->
        <script src="js/main.js"></script>
    </body>
</html>
