                             <%if(!token){%>
                            <a href="http://eventify-1-ixhs.onrender.com/users/login" class="nav-item nav-link">Login</a>
                            <% }%>
                  
                        <a href="http://eventify-1-ixhs.onrender.com/dashboard" class="nav-item nav-link">Log out</a>
                    </div>
                </div>
            </nav>
        </div>
        <!-- Navbar End -->

        
        <!-- Event Details Section Start -->
<div class="container-xxl bg-primary hero-header min-vh-100 d-flex  justify-content-center">
    <div class="container px-lg-5">
        <div class="row g-5">
            <div class="col-lg-8 mx-auto">
                <!-- Event Image -->
                <div class="bg-white rounded p-5 shadow-lg wow fadeIn" data-wow-delay="0.3s">
                    <h3 class="text-center mb-4"> <%= event.title %></h3>
                    
                    <!-- Event Image -->
                    <div class="text-center mb-4">
                        <div class="card col-6 offset-3 show-card listing-card">
                        <img src="img/hack.jpg" width="45%" height="100%" class="card-img-top show-img" alt="<%= event.title %> Image">
                    </div>
                </div>

                    <!-- Event Content -->
                    <p> <%= event.title %></p>
                    <p> <%= event.content %></p>
                    <p> <%= event.media %></p>
                    <p> <%= event.location %></p>
                    <p> <%= event.createdAt.toDateString() %></p>
                   
                    <!-- Buttons Section -->




                  
                    <div class="d-flex justify-content-between mt-4">
                        <!-- Edit Button -->
                        <!-- <a href="/events/<%= event.id %>/edit" class="btn btn-warning w-48 py-2  text-center">Edit</a> -->
                        <!-- <button type="submit" class="btn btn-primary-gradient w-48 py-2  text-center" value="Login"></button> -->
                        <% if (user.userType === 'admin') { %>
                        <form action="/events/<%= event.id %>" method="GET" style="display: inline;">
                        <!-- <button type="submit" class="btn btn-danger w-48 py-2  text-center">Delete</button> -->
                        <button type="submit" class="btn btn-primary-gradient w-48 py-2  text-center" value="Login"> &nbsp &nbsp Edit &nbsp &nbsp</button>
                    </form>
                    <% } %>

                    <% if (user.userType === 'admin') { %>
                        <!-- Delete Button -->
                        <form action="/events/<%= event.id %>?_method=DELETE" method="POST" style="display: inline;">
                            <!-- <button type="submit" class="btn btn-danger w-48 py-2  text-center">Delete</button> -->
                            <button type="submit" class="btn btn-primary-gradient w-48 py-2  text-center" value="Login"> &nbsp &nbspDelete &nbsp &nbsp</button>
                        </form>
                     <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Event Details Section End -->







