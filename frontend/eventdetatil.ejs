<body>
    <div class="container-xxl bg-white p-0">

        <!-- Navbar Start -->
        <div class="container-xxl position-relative p-0" id="home">
            <nav class="navbar navbar-expand-lg navbar-light px-4 px-lg-5 py-3 py-lg-0">
                <a href="https://eventify-1-ixhs.onrender.com/dashboard" class="navbar-brand p-0">
                    <h1 class="m-0">Eventify</h1>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav mx-auto py-0">
                        <a href="https://eventify-1-ixhs.onrender.com/dashboard" class="nav-item nav-link">Home</a>
                        <a href="https://eventify-1-ixhs.onrender.com/dashboard" class="nav-item nav-link">About</a>
                        <a href="https://eventify-1-ixhs.onrender.com/dashboard" class="nav-item nav-link active">Event Details</a>
